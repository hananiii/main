{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "types": ["node"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "$admin-root/*": [
        "./src/projects/eleave-admin/*"
      ],
      "$user-root/*": [
        "./src/projects/eleave-user/*"
      ]
    },
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": false,
    "strictInjectionParameters": true,
    "enableIvy": false
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts",
    "src/projects/eleave-admin/typings/*",
    "src/projects/eleave-user/typings/*"
  ]
}